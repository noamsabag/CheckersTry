<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CheckersTry"
        tools:targetApi="31">
        <activity
            android:name=".GameHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_game_history"
            android:theme="@style/Theme.CheckersTry" />
        <activity
            android:name=".AnalysisActivity"
            android:exported="false"
            android:label="@string/title_activity_analysis"
            android:theme="@style/Theme.CheckersTry" />
        <activity
            android:name=".RoomsActivity"
            android:exported="false"
            android:label="@string/title_activity_rooms"
            android:theme="@style/Theme.CheckersTry" />
        <activity
            android:name=".GameActivity"
            android:exported="false"
            android:label="@string/title_activity_game"
            android:theme="@style/Theme.CheckersTry" />
        <activity
            android:name=".SignUpPage"
            android:exported="false"
            android:label="@string/title_activity_sign_up_page"
            android:theme="@style/Theme.CheckersTry" />
        <activity
            android:name=".LoginPage"
            android:exported="true"
            android:label="@string/title_activity_login_page"
            android:theme="@style/Theme.CheckersTry">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CheckersTry" />
    </application>

</manifest>