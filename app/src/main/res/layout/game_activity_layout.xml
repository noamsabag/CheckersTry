<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gameBackground"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:id="@+id/passAndPlay"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
        android:background="@color/playerDataBackground"
        android:layout_marginVertical="10dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/playerDataBackground"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Player"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvBlackTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/timerBackgroundColor"
                android:textColor="@color/white"
                android:text="00:00"
                android:textSize="25sp"
                android:padding="2dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_gravity="center">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:id="@+id/onlineGame"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp"
        android:background="#31455a"
        android:layout_marginVertical="10dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/playerDataBackground"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="White Player"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvWhiteTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/timerBackgroundColor"
                android:textColor="@color/white"
                android:text="00:00"
                android:textSize="25sp"
                android:padding="2dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>




</LinearLayout>
